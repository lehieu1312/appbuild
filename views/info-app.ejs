<% include header%>
    <script>
    </script>
    <div class="panel">
        <div class="panel-heading">
            <h3>Setting application</h3>
        </div>
        <div class="panel-body">
            <form class="form form-horizontal" id="settingapp" action="/info-app" method="POST">
                <%var i=0,j=0; %>
                    <%for(i=0;i<arrFile.length;i++){%>
                        <div class="info-file">
                            <h4>
                                <%=arrFile[i]['$'].path %>
                            </h4>
                            <%for(j=0;j<arrFile[i].field.length;j++){
                                var path=arrFile[i]['$'].path;
                                %>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label"><%=arrFile[i]['field'][j]['$'].label %> </label>
                                    <% if(arrFile[i]['field'][j]['$'].type=='string'){%>
                                        <div class="col-sm-6"><input class="form-control" required="<%=arrFile[i]['field'][j]['$'].required %>" type="text" name="<%=path+'='+arrFile[i]['field'][j]['$'].name %>" value="a" /></div>
                                        <%}else  if(arrFile[i]['field'][j]['$'].type=='boolean'){%>
                                            <label class="radio-inline">
                                                <input type="radio" name="<%=path+'='+arrFile[i]['field'][j]['$'].name %>"  value="true" checked> true
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="<%=path+'='+arrFile[i]['field'][j]['$'].name %>"  value="false"> false
                                            </label>
                                            <%}else{%>
                                                <div class="col-sm-6"><input class="form-control" required="<%=arrFile[i]['field'][j]['$'].required %>" type="<%=arrFile[i]['field'][j]['$'].type %>" name="<%=path+'='+arrFile[i]['field'][j]['$'].name %>" value="1" /></div>
                                                <%}%>
                                </div>
                                <%}%>
                                    <hr>
                        </div>
                        <%}%>
                            <div class="form-group">
                                <div class="col-sm-6 col-sm-offset-2">
                                    <input type="submit" value="Submit" class="btn btn-primary">
                                </div>
                            </div>
            </form>
        </div>
    </div>
    <% include footer%>